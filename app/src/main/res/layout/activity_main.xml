<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="com.example.administrator.calc.MainActivity">

    <Button
        android:id="@+id/btnAC"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_ac"
        android:fontFamily="sans-serif"
        android:text="AC"
        android:textColor="@color/color_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSeven"
        app:layout_constraintLeft_toLeftOf="@+id/btnSeven"
        app:layout_constraintRight_toRightOf="@+id/btnSeven" />

    <Button
        android:id="@+id/btnLeftParan"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_operator"
        android:fontFamily="sans-serif"
        android:text="("
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEight"
        app:layout_constraintLeft_toLeftOf="@+id/btnEight"
        app:layout_constraintRight_toRightOf="@+id/btnEight" />

    <Button
        android:id="@+id/btnRightParan"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_operator"
        android:fontFamily="sans-serif"
        android:text=")"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNine"
        app:layout_constraintLeft_toLeftOf="@+id/btnNine"
        app:layout_constraintRight_toRightOf="@+id/btnNine" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_back"
        android:fontFamily="sans-serif"
        android:text="D"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintLeft_toLeftOf="@+id/btnAdd"
        app:layout_constraintRight_toRightOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:elevation="0dp"
        android:fontFamily="sans-serif"
        android:text="7"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintLeft_toLeftOf="@+id/btnFour"
        app:layout_constraintRight_toRightOf="@+id/btnFour" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="8"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFive"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/btnFive"
        app:layout_constraintRight_toRightOf="@+id/btnFive" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="9"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSix"
        app:layout_constraintLeft_toLeftOf="@+id/btnSix"
        app:layout_constraintRight_toRightOf="@+id/btnSix" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_operator"
        android:fontFamily="sans-serif"
        android:text="+"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubs"
        app:layout_constraintLeft_toLeftOf="@+id/btnSubs"
        app:layout_constraintRight_toRightOf="@+id/btnSubs" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="4"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOne"
        app:layout_constraintLeft_toLeftOf="@+id/btnOne"
        app:layout_constraintRight_toRightOf="@+id/btnOne" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="5"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTwo"
        app:layout_constraintLeft_toLeftOf="@+id/btnTwo"
        app:layout_constraintRight_toRightOf="@+id/btnTwo" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="6"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnThree"
        app:layout_constraintLeft_toLeftOf="@+id/btnThree"
        app:layout_constraintRight_toRightOf="@+id/btnThree" />

    <Button
        android:id="@+id/btnSubs"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_operator"
        android:fontFamily="sans-serif"
        android:text="-"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMulti"
        app:layout_constraintLeft_toLeftOf="@+id/btnMulti"
        app:layout_constraintRight_toRightOf="@+id/btnMulti" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="1"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnZero"
        app:layout_constraintLeft_toLeftOf="@+id/btnZero"
        app:layout_constraintRight_toRightOf="@+id/btnZero" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="2"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDot"
        app:layout_constraintLeft_toLeftOf="@+id/btnDot"
        app:layout_constraintRight_toRightOf="@+id/btnDot" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="3"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEqual"
        app:layout_constraintLeft_toLeftOf="@+id/btnEqual"
        app:layout_constraintRight_toRightOf="@+id/btnEqual" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_operator"
        android:fontFamily="sans-serif"
        android:text="*"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDiv"
        app:layout_constraintLeft_toLeftOf="@+id/btnDiv"
        app:layout_constraintRight_toRightOf="@+id/btnDiv" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="0"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/btn_num"
        android:fontFamily="sans-serif"
        android:text="."
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnZero" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/btn_operator"
        android:fontFamily="sans-serif"
        android:text="="
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnDot" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/btn_operator"
        android:fontFamily="sans-serif"
        android:text="/"
        android:textColor="@color/color_letter"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnEqual" />

    <EditText
        android:id="@+id/resultWindow"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:editable="false"
        android:ems="20"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/sentenceWindow"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:cursorVisible="false"
        android:editable="false"
        android:ems="20"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAC"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
